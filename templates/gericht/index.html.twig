{% extends 'base.html.twig' %}


{% block title %}Hello GerichtController!
{% endblock %}

{% block body %}
	{% for message in app.flashes('erfolg') %}
		<div class="alert alert-success " id="message-container">
			<h3>{{message}}</h3>
		</div>
	{% endfor %}
	<div class="container">
		<h2>Gerichte bearbeiten</h2>
		<br>
		<table class="table table-striped">
			<thead>
				<tr>
					<td>Bestell Nr.</td>
					<td>Name</td>
					<td>Beschreibung</td>
					<td>Preis</td>
					<td>Kategorie</td>
					<td>LÃ¶schen</td>
					<td>
						<a href="{{ path("gericht.anlegen") }}">Anlegen</a>
					</td>
				</tr>
			</thead>
			<tbody>
				{% for gericht in gerichte %}
					<tr>
						<td>{{gericht.id}}</td>
						<td>
							<a href="{{ path("gericht.anzeigen", {id: gericht.id }) }}">{{gericht.name}}</a>
						</td>
						<td>{{gericht.beschreibung}}</td>
						<td>{{gericht.Preis}}</td>
						<td>{{gericht.kategorie}}</td>
						<td>
							<a href="{{ path("gericht.entfernen", {id: gericht.id }) }}">X</a>
						</td>
						<td></td>
					</tr>

				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
